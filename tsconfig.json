{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "incremental": true,
    "target": "es6",
    "module": "esnext",
    "outDir": "./dist/typescript",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "lib": ["dom", "dom.iterable", "esnext"],
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "baseUrl": "./",
    "paths": {
      "@src/*": ["src/*"],
      "@components": ["src/components/*"],
      "@hooks": ["src/hooks/*"],
      "@images": ["src/image/*"],
      "@pages": ["src/pages/*"],
      "@common": ["src/common/*"],
      "@constants": ["src/constants/*"]
      // "@unstyled-ui/*": ["unstyled-ui/*"],
      // "@c3/crypto": ["c3/crypto/src/index"],
      // "@c3/react": ["c3/react/src/index"],
      // "@c3/api": ["c3/api/src/index"]
      // "@c3/css": ["packages/css/src/index"],
      // "@c3/dom": ["packages/dom/src/index"],
      // "@c3/utils": ["packages/utils/src/index"],
    }
  },
  "include": ["src"],
  "exclude": ["node_modules/*"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
